<div class="container">

  <h1>Create a new review for <%= @restaurant.name %></h1>


    <%= form_for [@restaurant, @review] do |f| %>
      <%= f.label :content, "Write your review below" %>
      <%= f.text_field :content, class: 'form-control' %>
      <%= f.label :rating, "Rate restaurant" %>
      <%= f.text_field :rating, class: 'form-control' %>
      <%= f.submit %>
    <% end %>

  <%= link_to 'Back', restaurants_path %>

</div>
